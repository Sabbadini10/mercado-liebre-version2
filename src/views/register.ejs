<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación' }) %>

	<body>
		<!-- Header -->
		<%- include('partials/headerNavbar') %>
			<!-- /Header -->

			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Formulario de creación de usuarios</h2>
					</div>
				</div>
				<div class="col-12">
					<form action="" enctype="multipart/form-data" method="POST">
						<div class="row product-detail">
							<div class="col-12 col-md-6">
								<label for="first_name" class="form-label">Nombre:</label>
								<input type="text"
									class="form-input <%= locals.errors && errors.first_name ? 'is-invalid' : null %>"
									id="first_name" name="first_name"
									value="<%= locals.old && old.first_name ? old.first_name : null %>"
									placeholder="Ej: Juan" />
								<span class="text-danger">
									<%= locals.errors && errors.first_name ? errors.first_name.msg : null %>
								</span>
							</div>
							<div class="col-12 col-md-6">
								<label for="last_name" class="form-label">Apellido:</label>
								<input type="text"
									class="form-input <%= locals.errors && errors.last_name ? 'is-invalid' : null %>"
									id="last_name" name="last_name"
									value="<%= locals.old && old.last_name ? old.last_name : null %>"
									placeholder="Ej: Perez" />
								<span class="text-danger">
									<%= locals.errors && errors.last_name ? errors.last_name.msg : null %>
								</span>
							</div>
							<div class="col-12 col-md-6">
								<label for="first_name" class="form-label">Nombre de usuario:</label>
								<input type="text"
									class="form-input <%= locals.errors && errors.user_name ? 'is-invalid' : null %>"
									id="user_name" name="user_name"
									value="<%= locals.old && old.user_name ? old.user_name : null %>"
									placeholder="Ej: Juan" />
								<span class="text-danger">
									<%= locals.errors && errors.user_name ? errors.user_name.msg : null %>
								</span>
							</div>
							<div class="col-12 col-md-6">
								<label for="email" class="form-label">Email</label>
								<input type="email"
									class="form-input <%= locals.errors && errors.email ? 'is-invalid' : null %>"
									id="email" name="email" value="<%= locals.old && old.email ? old.email : null %>"
									placeholder="Ej: asdsa@adsasd" />
								<span class="text-danger">
									<%= locals.errors && errors.email ? errors.email.msg : null %>
								</span>
							</div>
							<div class="col-12 col-md-6">
								<label for="password" class="form-label">Password</label>
								<input type="password"
									class="form-input <%= locals.errors && errors.password ? 'is-invalid' : null %>"
									id="password" name="password"
									value="<%= locals.old && old.password ? old.password : null %>"
									placeholder="Ej: 12345" />
								<span class="text-danger">
									<%= locals.errors && errors.password ? errors.password.msg : null %>
								</span>
							</div>
							<div class="col-12 col-md-6">
								<label for="password2" class="form-label">Confirmar Password</label>
								<input type="password"
									class="form-input <%= locals.errors && errors.password2? 'is-invalid' : null %>"
									id="password2" name="password2"
									value="<%= locals.old && old.password2? old.password2: null %>"
									placeholder="Ej: 12345" />
								<span class="text-danger">
									<%= locals.errors && errors.password2? errors.password2.msg : null %>
								</span>
							</div>
							<div class="col-12 col-md-6">
								<label for="fecha_nacimiento" class="form-label">Fecha de nacimiento:</label>
								<input type="date"
									class="form-input <%= locals.errors && errors.fecha_nacimiento ? 'is-invalid' : null %>"
									id="fecha_nacimiento" name="fecha_nacimiento"
									value="<%= locals.old && old.fecha_nacimiento ? old.fecha_nacimiento : null %>"
									placeholder="Ej: Juan" />
								<span class="text-danger">
									<%= locals.errors && errors.fecha_nacimiento ? errors.fecha_nacimiento.msg : null %>
								</span>
							</div>
							<div class="col-12 col-md-6">
								<label for="first_name" class="form-label">Domilicio</label>
								<input type="text"
									class="form-input <%= locals.errors && errors.domicilio ? 'is-invalid' : null %>"
									id="domicilio" name="domicilio"
									value="<%= locals.old && old.domicilio ? old.domicilio : null %>"
									placeholder="Ej: Juan" />
								<span class="text-danger">
									<%= locals.errors && errors.domicilio ? errors.domicilio.msg : null %>
								</span>
							</div>
							<div class="col-12 col-md-6">
								<label for="perfil_usuario" class="form-label">Perfil De usuario</label>
								<div class="form-check">
									<label class="form-check-label">Vendedor</label>
									<input class="form-check-input" type="radio" name="perfil_usuario" id="vendedor" <%= users.perfil_usuario === "vendedor" && 'checked' %>
										autocomplete="off" />
									<br />
									<label class="form-check-label">Comprador</label>
									<input class="form-check-input" type="radio" name="perfil_usuario" id="comprador" <%= users.perfil_usuario === "comprador" && 'checked' %>
										autocomplete="off" />
								</div>
							</div>
							<div class="col-12 col-md-6">
								<label for="categoria" class="form-label">Categoria</label>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="electro" name="categorias"  <%= users.categorias && users.categorias.includes('electro') && "checked"%> 
										id="electro" />
									<label class="form-check-label" for="electro">Electro</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="moda" name="categorias"  <%= users.categorias && users.categorias.includes('moda') && "checked"%> 
										id="moda" />
									<label class="form-check-label" for="moda">Moda</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="hogar" name="categorias"  <%= users.categorias && users.categorias.includes('hogar') && "checked"%> 
										id="hogar" />
									<label class="form-check-label" for="hogar"> Hogar </label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="jugueteria" name="categorias"  <%= users.categorias && users.categorias.includes('jugueteria') && "checked"%> 
										id="jugeteria" />
									<label class="form-check-label" for="jugeteria">Jugueteria</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="vida_sana" name="categorias"  <%= users.categorias && users.categorias.includes('vida_sana') && "checked"%> 
										id="vida_sana" />
									<label class="form-check-label" for="vida_sana">Vida sana</label>
								</div>
							</div>
							<div class="col-12">
								<label for="avatar" class="form-label">Imagen:</label>
								<input type="file" id="avatar" name="avatar" class="form-input" />
							</div>
							<div class="d-flex flex-row justify-content-center alig-items-center gap-4">
								<button type="submit" class="btn btn-success btn-lg">
									Crear Perfil
								</button>
								<button class="btn btn-danger btn-lg" type="reset">
									Borrar Formulario
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
	</body>

</html>