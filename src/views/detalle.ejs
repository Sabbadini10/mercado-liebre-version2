<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Detalle'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%= producto.name %> </h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/productos/<%= producto.image %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= producto.name %> </h2>
						
							<p class="product-detail-price small">
								<span><%= producto.price %></span>
								/
								<b><%= producto.discount %>% OFF</b>
							</p>
							<p class="product-detail-price">
								$<%= toThousand(producto.price -((producto.price * producto.discount / 100)).toFixed(0)) %>
							</p>
							<p class="product-detail-price">
								<%= toThousand(producto.price) %>
							</p>

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr>
						
						<form  action="/productos/eliminar/<%= producto.id %>?_method=DELETE" method="POST" style="display: flex">
							<a href="/productos/editar/<%= producto.id %>" class="action-button edit">EDITAR</a>
							<button type="submit" class="action-button delete">ELIMINAR</button>
						</form>
						
					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>